@model IEnumerable<Entity.Concrete.Supplier>
@{
    ViewBag.Title = "Tedarikçiler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Tedarikçi Listesi</h3>
        <div class="card-tools">
            <a href="@Url.Action("Create", "Supplier")" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Yeni Tedarikçi Ekle
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Firma Adı</th>
                    <th>İletişim Kişisi</th>
                    <th>Telefon</th>
                    <th>E-posta</th>
                    <th>Adres</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CompanyName</td>
                        <td>@item.ContactName</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>
                            <a href="@Url.Action("Edit", "Supplier", new { id = item.SupplierId })" class="btn btn-info btn-sm">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <a href="@Url.Action("Details", "Supplier", new { id = item.SupplierId })" class="btn btn-primary btn-sm">
                                <i class="fas fa-search"></i> Detay
                            </a>
                            <a href="@Url.Action("Delete", "Supplier", new { id = item.SupplierId })" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 