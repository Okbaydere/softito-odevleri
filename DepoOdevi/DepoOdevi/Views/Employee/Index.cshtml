@model IEnumerable<Entity.Concrete.Employee>
@{
    ViewBag.Title = "Çalışanlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Çalışan Listesi</h3>
        <div class="card-tools">
            <a href="@Url.Action("Create", "Employee")" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Yeni Çalışan Ekle
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Görev</th>
                    <th>Telefon</th>
                    <th>E-posta</th>
                    <th>Başlangıç Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Task</td>
                        <td>@item.Phone</td>
                        <td>@item.Mail</td>
                        <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="@Url.Action("Edit", "Employee", new { id = item.EmployeeId })" class="btn btn-info btn-sm">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <a href="@Url.Action("Details", "Employee", new { id = item.EmployeeId })" class="btn btn-primary btn-sm">
                                <i class="fas fa-search"></i> Detay
                            </a>
                            <a href="@Url.Action("Delete", "Employee", new { id = item.EmployeeId })" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 